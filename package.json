{
  "name": "@onrewind/krousel",
  "version": "0.3.0",
  "description": "Javascript carousel library",
  "keywords": [
    "carousel",
    "slider",
    "javascript"
  ],
  "homepage": "https://github.com/onrewind/krousel#readme",
  "bugs": {
    "url": "https://github.com/onrewind/krousel/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onrewind/krousel.git"
  },
  "license": "MIT",
  "author": "On Rewind",
  "main": "dist/krousel.js",
  "source": "src/index.js",
  "scripts": {
    "build": "microbundle --name Krousel --format cjs",
    "build:examples": "parcel build ./examples/index.html --out-dir docs --public-url ./",
    "publish": "clean-publish",
    "serve:examples": "http-server docs",
    "size": "size-limit",
    "watch": "microbundle watch --name Krousel --format cjs",
    "watch:examples": "parcel ./examples/index.html --out-dir public --open"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "prettier --write"
  },
  "devDependencies": {
    "@size-limit/file": "4.6.0",
    "clean-publish": "1.1.6",
    "http-server": "0.12.1",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "microbundle": "0.12.4",
    "node-sass": "4.13.1",
    "prettier": "1.19.1",
    "sass": "1.26.3",
    "size-limit": "4.6.0",
    "sort-package-json": "1.46.0"
  },
  "size-limit": [
    {
      "path": [
        "dist/krousel.js",
        "dist/krousel.css"
      ],
      "gzip": false,
      "limit": "20KB"
    }
  ]
}